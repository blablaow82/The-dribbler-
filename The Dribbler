--[[ 
  üåà BLUE LOCK EXPLOIT GUI üåà
  - Mobile-friendly
  - No cooldowns
  - 100% broken abilities
--]]

-- GUI Setup
local gui = Instance.new("ScreenGui")
gui.Name = "BlueLockHax"
gui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")

-- Main Frame (Rainbow Background)
local mainFrame = Instance.new("Frame")
mainFrame.Size = UDim2.new(0.8, 0, 0.9, 0)
mainFrame.Position = UDim2.new(0.1, 0, 0.05, 0)
mainFrame.BackgroundColor3 = Color3.new(1, 0, 1)
mainFrame.BackgroundTransparency = 0.2
mainFrame.Parent = gui

-- Rainbow Animation (Visual Effect)
spawn(function()
    while true do
        for i = 0, 1, 0.01 do
            mainFrame.BackgroundColor3 = Color3.fromHSV(i, 1, 1)
            wait(0.05)
        end
    end
end)

-- Title Text
local title = Instance.new("TextLabel")
title.Text = "üíé BLUE LOCK GOD MODE üíé"
title.Size = UDim2.new(1, 0, 0.1, 0)
title.Font = Enum.Font.Impact
title.TextSize = 24
title.TextColor3 = Color3.new(1, 1, 1)
title.Parent = mainFrame

-- Category: "Custom Style"
local customStyle = Instance.new("TextButton")
customStyle.Text = "‚ö° CUSTOM STYLE ‚ö°"
customStyle.Size = UDim2.new(0.9, 0, 0.2, 0)
customStyle.Position = UDim2.new(0.05, 0, 0.15, 0)
customStyle.Font = Enum.Font.Fantasy
customStyle.TextSize = 20
customStyle.Parent = mainFrame

-- Button: "The Dribbler"
local dribblerButton = Instance.new("TextButton")
dribblerButton.Text = "üî• THE DRIBBLER üî•"
dribblerButton.Size = UDim2.new(0.8, 0, 0.15, 0)
dribblerButton.Position = UDim2.new(0.1, 0, 0.4, 0)
dribblerButton.Font = Enum.Font.SciFi
dribblerButton.TextColor3 = Color3.new(0, 1, 1)
dribblerButton.Parent = mainFrame

-- ABILITIES MENU (Appears when clicked)
local abilitiesFrame = Instance.new("Frame")
abilitiesFrame.Size = UDim2.new(0.9, 0, 0.6, 0)
abilitiesFrame.Position = UDim2.new(0.05, 0, 0.6, 0)
abilitiesFrame.Visible = false
abilitiesFrame.Parent = mainFrame

-- Power Shoot Ability
local powerShoot = Instance.new("TextButton")
powerShoot.Text = "üí• POWER SHOOT (140mph)"
powerShoot.Size = UDim2.new(0.9, 0, 0.2, 0)
powerShoot.Position = UDim2.new(0.05, 0, 0.05, 0)
powerShoot.Parent = abilitiesFrame

powerShoot.MouseButton1Click:Connect(function()
    game.Players.LocalPlayer.Character.HumanoidRootPart.BallVelocity.Value = Vector3.new(0, 0, 140)
    -- VFX: Explosion & Screen Shake (fake)
    print("BOOM! GOAL BROKEN!")
end)

-- Goddest Dribbling
local godDribble = Instance.new("TextButton")
godDribble.Text = "üëë GODDEST DRIBBLE"
godDribble.Size = UDim2.new(0.9, 0, 0.2, 0)
godDribble.Position = UDim2.new(0.05, 0, 0.3, 0)
godDribble.Parent = abilitiesFrame

godDribble.MouseButton1Click:Connect(function()
    -- Fake "ankle break" effect
    for _, player in pairs(game.Players:GetPlayers()) do
        if player ~= game.Players.LocalPlayer then
            player.Character.Humanoid:SetStateEnabled(Enum.HumanoidStateType.FallingDown, true)
        end
    end
    print("ANKLE BREAKER ACTIVATED!")
end)

-- Beast Steal
local beastSteal = Instance.new("TextButton")
beastSteal.Text = "ü¶Å BEAST STEAL (100%)"
beastSteal.Size = UDim2.new(0.9, 0, 0.2, 0)
beastSteal.Position = UDim2.new(0.05, 0, 0.55, 0)
beastSteal.Parent = abilitiesFrame

beastSteal.MouseButton1Click:Connect(function()
    -- Guaranteed steal
    game.Players.LocalPlayer.Character.BallOwner.Value = true
    print("BALL STOLEN! ROAR!")
end)

-- Chicken Steal
local chickenSteal = Instance.new("TextButton")
chickenSteal.Text = "üêî CHICKEN STEAL (SHAME)"
chickenSteal.Size = UDim2.new(0.9, 0, 0.2, 0)
chickenSteal.Position = UDim2.new(0.05, 0, 0.8, 0)
chickenSteal.Parent = abilitiesFrame

chickenSteal.MouseButton1Click:Connect(function()
    -- Fake "embarrassing" steal
    for _, player in pairs(game.Players:GetPlayers()) do
        if player ~= game.Players.LocalPlayer then
            player.Character.Humanoid.Sit = true -- Makes them sit (fake "cluck" effect)
        end
    end
    print("CLUCK CLUCK! BALL PEECKED!")
end)

-- Toggle Abilities Menu
dribblerButton.MouseButton1Click:Connect(function()
    abilitiesFrame.Visible = not abilitiesFrame.Visible
end)
