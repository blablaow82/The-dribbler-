-- Blue Lock Dribbler Ability Menu (Based on Your Screenshot)
local Players = game:GetService("Players")
local TweenService = game:GetService("TweenService")

-- Create main GUI
local gui = Instance.new("ScreenGui")
gui.Name = "DribblerHUD"
gui.Parent = Players.LocalPlayer:WaitForChild("PlayerGui")

-- Main container (matches your screenshot's layout)
local mainFrame = Instance.new("Frame")
mainFrame.Size = UDim2.new(0.3, 0, 0.25, 0)
mainFrame.Position = UDim2.new(0.6, 0, 0.7, 0)
mainFrame.BackgroundColor3 = Color3.fromRGB(15, 15, 25)
mainFrame.BackgroundTransparency = 0.2
mainFrame.Parent = gui

-- Header (Awakening Timer)
local header = Instance.new("TextLabel")
header.Text = "‚ö° DRIBBLER MODE ‚ö°"
header.Size = UDim2.new(1, 0, 0.15, 0)
header.Font = Enum.Font.GothamBlack
header.TextSize = 18
header.TextColor3 = Color3.new(0, 0.8, 1)
header.BackgroundTransparency = 1
header.Parent = mainFrame

-- Ability container (replaces REQUESTS/ROUTE sections)
local abilityContainer = Instance.new("Frame")
abilityContainer.Size = UDim2.new(0.9, 0, 0.8, 0)
abilityContainer.Position = UDim2.new(0.05, 0, 0.2, 0)
abilityContainer.BackgroundTransparency = 1
abilityContainer.Parent = mainFrame

-- 4 Abilities Data (replaces SHIFTUOCK/EMOTE/etc)
local abilities = {
    {
        Name = "POWER SHOOT",
        Icon = "üí•",
        Color = Color3.fromRGB(255, 60, 60),
        Keybind = "Q"
    },
    {
        Name = "GODDEST DRIBBLE",
        Icon = "üëë", 
        Color = Color3.fromRGB(255, 200, 0),
        Keybind = "E"
    },
    {
        Name = "BEAST STEAL",
        Icon = "ü¶Å",
        Color = Color3.fromRGB(180, 0, 180),
        Keybind = "R"
    },
    {
        Name = "CHICKEN STEAL",
        Icon = "üêî",
        Color = Color3.fromRGB(255, 120, 0),
        Keybind = "F"
    }
}

-- Create ability buttons (2x2 grid)
for i, ability in ipairs(abilities) do
    local col = (i-1) % 2
    local row = math.floor((i-1)/2)
    
    local button = Instance.new("TextButton")
    button.Text = ability.Icon .. " " .. ability.Name .. "\n[" .. ability.Keybind .. "]"
    button.Size = UDim2.new(0.45, 0, 0.45, 0)
    button.Position = UDim2.new(0.5 * col, 0, 0.5 * row, 0)
    button.Font = Enum.Font.GothamBold
    button.TextSize = 14
    button.TextColor3 = Color3.new(1, 1, 1)
    button.BackgroundColor3 = ability.Color
    button.BackgroundTransparency = 0.3
    button.Parent = abilityContainer
    
    -- Click effect
    button.MouseButton1Click:Connect(function()
        print(ability.Name .. " activated!")
        -- Pulse animation
        local tween = TweenService:Create(
            button,
            TweenInfo.new(0.1, Enum.EasingStyle.Quad),
            {Size = UDim2.new(0.4, 0, 0.4, 0)}
        )
        tween:Play()
        tween.Completed:Wait()
        button.Size = UDim2.new(0.45, 0, 0.45, 0)
    end)
end
