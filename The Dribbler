-- Blue Lock Dribbler Ability Menu
local Players = game:GetService("Players")
local TweenService = game:GetService("TweenService")

-- Create main GUI
local gui = Instance.new("ScreenGui")
gui.Name = "DribblerGUI"
gui.Parent = Players.LocalPlayer:WaitForChild("PlayerGui")

-- Main container
local mainFrame = Instance.new("Frame")
mainFrame.Size = UDim2.new(0.25, 0, 0.08, 0)
mainFrame.Position = UDim2.new(0.7, 0, 0.85, 0)
mainFrame.BackgroundColor3 = Color3.fromRGB(25, 25, 35)
mainFrame.BackgroundTransparency = 0.3
mainFrame.Parent = gui

-- Dribbler button
local dribblerButton = Instance.new("TextButton")
dribblerButton.Name = "DribblerButton"
dribblerButton.Text = "[ THE DRIBBLER ]"
dribblerButton.Size = UDim2.new(1, 0, 1, 0)
dribblerButton.Font = Enum.Font.GothamBlack
dribblerButton.TextSize = 18
dribblerButton.TextColor3 = Color3.new(1, 1, 1)
dribblerButton.BackgroundColor3 = Color3.fromRGB(0, 100, 255)
dribblerButton.BackgroundTransparency = 0.2
dribblerButton.Parent = mainFrame

-- Ability container (hidden initially)
local abilityContainer = Instance.new("Frame")
abilityContainer.Name = "AbilityContainer"
abilityContainer.Size = UDim2.new(1, 0, 2, 0)
abilityContainer.Position = UDim2.new(0, 0, -2, 0)
abilityContainer.BackgroundTransparency = 1
abilityContainer.Visible = false
abilityContainer.Parent = mainFrame

-- Ability data
local abilities = {
    {
        Name = "üí• POWER SHOOT",
        Description = "140mph unstoppable shot",
        Color = Color3.fromRGB(255, 50, 50),
        Keybind = "Q"
    },
    {
        Name = "üëë GODDEST DRIBBLE",
        Description = "Auto ankle-break defenders",
        Color = Color3.fromRGB(255, 215, 0),
        Keybind = "E"
    },
    {
        Name = "ü¶Å BEAST STEAL",
        Description = "100% tackle success",
        Color = Color3.fromRGB(180, 0, 180),
        Keybind = "R"
    },
    {
        Name = "üêî CHICKEN STEAL",
        Description = "Humiliating but effective",
        Color = Color3.fromRGB(255, 165, 0),
        Keybind = "F"
    }
}

-- Create ability buttons
for i, ability in ipairs(abilities) do
    local abilityButton = Instance.new("TextButton")
    abilityButton.Name = ability.Name:gsub("%W", "") .. "Button"
    abilityButton.Text = ability.Name .. "\n[" .. ability.Keybind .. "]"
    abilityButton.Size = UDim2.new(0.9, 0, 0.2, 0)
    abilityButton.Position = UDim2.new(0.05, 0, 0.05 + (0.23 * (i-1)), 0)
    abilityButton.Font = Enum.Font.GothamBold
    abilityButton.TextSize = 16
    abilityButton.TextColor3 = Color3.new(1, 1, 1)
    abilityButton.BackgroundColor3 = ability.Color
    abilityButton.BackgroundTransparency = 0.3
    abilityButton.Parent = abilityContainer
    
    -- Button click effect
    abilityButton.MouseButton1Click:Connect(function()
        print(ability.Name .. " activated!")
        -- Pulse animation
        local tween = TweenService:Create(
            abilityButton,
            TweenInfo.new(0.1, Enum.EasingStyle.Quad, Enum.EasingDirection.Out),
            {Size = UDim2.new(0.85, 0, 0.18, 0)}
        )
        tween:Play()
        tween.Completed:Wait()
        abilityButton.Size = UDim2.new(0.9, 0, 0.2, 0)
    end)
end

-- Toggle ability menu
local isExpanded = false
dribblerButton.MouseButton1Click:Connect(function()
    isExpanded = not isExpanded
    abilityContainer.Visible = isExpanded
    
    if isExpanded then
        -- Expand animation
        TweenService:Create(
            mainFrame,
            TweenInfo.new(0.2, Enum.EasingStyle.Quad),
            {Size = UDim2.new(0.25, 0, 0.5, 0)}
        ):Play()
    else
        -- Collapse animation
        TweenService:Create(
            mainFrame,
            TweenInfo.new(0.2, Enum.EasingStyle.Quad),
            {Size = UDim2.new(0.25, 0, 0.08, 0)}
        ):Play()
    end
end)
